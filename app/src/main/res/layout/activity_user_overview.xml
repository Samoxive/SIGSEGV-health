<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserOverviewActivity">


    <ImageView
            android:layout_width="144dp"
            android:layout_height="144dp" app:srcCompat="@drawable/ic_baseline_account_circle_24px"
            android:id="@+id/userAvatar"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="H. Burak Usul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/userAvatar"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/userAvatar"/>
    <TextView
            android:text="21 / Male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toEndOf="@+id/userAvatar"
            android:layout_marginStart="8dp"
    android:textStyle="bold"/>
    <TextView
            android:text="@string/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toEndOf="@+id/userAvatar"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <TextView
            android:text="1.84 m"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/textView3"/>
    <TextView
            android:text="@string/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView4" android:layout_marginStart="16dp"/>
    <TextView
            android:text="77 kg"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/textView5"/>
    <TextView
            android:text="@string/mission"
            android:layout_width="57dp"
            android:layout_height="16dp"
            android:id="@+id/textView8"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toEndOf="@+id/userAvatar"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Fitness"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9" app:layout_constraintStart_toEndOf="@+id/textView8"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/textView8"/>


</android.support.constraint.ConstraintLayout>